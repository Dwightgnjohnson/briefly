<h1>Briefs#index</h1>

<div class="col-md-4">
<p>Hi <%= @current_user.username %></p>

<%= form_for @brief, url: post_brief_path do |f| %>
  <%= f.text_area :brief %>
  <%= f.submit %>
<%end%>

<ul>
  <% @briefs.each do |x| %>
  <li>
    <%= x.brief %>
    <%= time_ago_in_words x.created_at %> ago by <%= x.user.username %>
  </li>
<%end%>
</ul>
</div>



<div class="col-md-8 bg-primary">
<h3>All Briefs</h3>
  <% @users.each do |x| %>
    <% if x.follow == true %>
        <% x.briefs.each do |y| %>
        <br>
        <%= x.username%> | <%= y.brief %>
        <%end%>
    <%end%>
  <%end%>

</div>
